@using ArquiteturaSW.Models
@model Movel

@{
    ViewBag.Title = "Home Page";
    var EstadoImage = ViewBag.EstadoImage;
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
{
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.Label("Estilo", null, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-15">
                        @Html.DropDownList("IdEstilo", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Tipo", null, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-15">
                        @Html.DropDownList("IdTipo", null, "-- Selecione --", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <input type="submit" value="Buscar" class="btn btn-success" />
            </div>

        </div>
    </div>
}

@if (EstadoImage)
{
    if (Model != null)
    {
        <div class="row">
            <img src="~/Content/@Model.Imagem" style="width: 200px; height: 200px; align-self: center" /><br />
        </div>
    }
    else
    {
        <h2><b>sem imagem no Banco de dados!</b></h2>
    }
}